{
  "name": "libby-download-extension",
  "version": "0.3.0",
  "description": "Firefox extension to download Libby audiobooks for transfer to unsupported devices",
  "scripts": {
    "start": "webpack --watch --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "package": "npm run build && cd dist && web-ext build",
    "lint": "eslint --ext .ts,.js --max-warnings=0 .",
    "prettier": "prettier --write",
    "test": "jest"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/plugin-transform-runtime": "^7.18.6",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.18.6",
    "@types/chai": "^4.3.5",
    "@types/chrome": "^0.0.238",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "babel-jest": "^29.5.0",
    "babel-loader": "^8.2.5",
    "chai": "^4.3.7",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "dotenv-webpack": "^8.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-webpack-plugin": "^4.0.1",
    "husky": "^8.0.1",
    "jest": "^29.5.0",
    "lint-staged": "^13.0.3",
    "mini-css-extract-plugin": "^2.6.1",
    "prettier": "^2.7.1",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@babel/runtime": "^7.18.6",
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/core-st": "^0.11.1",
    "@ffmpeg/ffmpeg": "^0.11.6",
    "@flemist/ffmpeg-encode-decode": "^0.0.16",
    "@flemist/ffmpeg.wasm-core-st": "^0.10.2",
    "@flemist/ffmpeg.wasm-st": "^0.10.1",
    "@types/firefox-webext-browser": "^109.0.0",
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "jszip": "^3.10.1",
    "music-metadata": "^8.1.3",
    "node-id3": "^0.2.5",
    "normalize.css": "^8.0.1",
    "path-browserify": "^1.0.1",
    "string_decoder": "^1.3.0",
    "uuid": "^9.0.0"
  },
  "browserslist": "last 5 firefox versions",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run prettier",
      "npm run lint"
    ]
  }
}
